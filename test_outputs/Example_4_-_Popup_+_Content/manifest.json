{
  "manifest_version": 3,
  "name": "Generated Extension",
  "version": "1.0",
  "description": "A tool that changes all webpage text to blue when I click a button in the popup.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}